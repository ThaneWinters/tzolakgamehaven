# Game Haven - Environment Configuration
# Copy to .env and customize, or use ./install.sh

# ===================
# Site Settings
# ===================
SITE_NAME=Game Haven
SITE_DESCRIPTION=Browse and discover our collection of board games
SITE_AUTHOR=Game Haven
SITE_URL=http://localhost:3000
API_EXTERNAL_URL=http://localhost:8000

# ===================
# Ports
# ===================
APP_PORT=3000
STUDIO_PORT=3001
POSTGRES_PORT=5432
KONG_HTTP_PORT=8000

# ===================
# Features (true/false)
# ===================
FEATURE_PLAY_LOGS=true
FEATURE_WISHLIST=true
FEATURE_FOR_SALE=true
FEATURE_MESSAGING=true
FEATURE_COMING_SOON=true
FEATURE_DEMO_MODE=false

# ===================
# Database (CHANGE THESE!)
# ===================
POSTGRES_PASSWORD=your-super-secret-password-change-me

# ===================
# Authentication (CHANGE THESE!)
# ===================
JWT_SECRET=your-super-secret-jwt-secret-at-least-32-characters
ANON_KEY=your-anon-key-for-public-access
SERVICE_ROLE_KEY=your-service-role-key-admin-access
SECRET_KEY_BASE=your-secret-key-base-for-realtime

# Auto-confirm emails (set to false if using SMTP)
MAILER_AUTOCONFIRM=true
DISABLE_SIGNUP=false

# ===================
# Email (Optional - leave blank to skip)
# ===================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=

# ===================
# Additional
# ===================
ADDITIONAL_REDIRECT_URLS=
